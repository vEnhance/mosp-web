{
  "compilerOptions": {
    "declaration": true,
    "allowJs": true,
    "outDir": "./typescripts/out/",
    "target": "ES2019",
    "module": "AMD",
    "moduleResolution": "node",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "sourceMap": true,
    "inlineSources": true,
    "baseUrl" : "./typescripts/src"
  },

  "include": [
    "./typescripts/src/**.ts"
  ]
}
